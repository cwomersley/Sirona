<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.strokere.Home">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <include
            android:id="@+id/include2"
            layout="@layout/toolbar_main" />

        <include
            android:id="@+id/include3"
            layout="@layout/tips" />

        <Button
            android:id="@+id/btnProgressH"
            android:layout_width="368dp"
            android:layout_height="90dp"
            android:layout_above="@+id/btnPreferencesH"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:background="@color/greenAccent"
            android:text="Progress"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/btnExerciseH"
            tools:layout_editor_absoluteX="8dp" />

        <Button
            android:id="@+id/btnExerciseH"
            style="@style/standard_button"
            android:layout_above="@+id/btnProgressH"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/standard_button_green"
            android:text="Exercise list"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="215dp" />

        <Button
            android:id="@+id/btnWorkoutH"
            android:layout_width="368dp"
            android:layout_height="90dp"
            android:layout_above="@+id/btnExerciseH"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/btnExerciseH"
            android:layout_marginBottom="10dp"
            android:background="@color/colorAccent"
            android:text="My workout"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="94dp" />

        <Button
            android:id="@+id/btnPreferencesH"
            android:layout_width="368dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="22dp"
            android:background="@color/greenAccent"
            android:onClick="oSettings"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/btnProgressH"
            tools:layout_editor_absoluteX="8dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
