<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hiddenEmail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.example.chris.strokere.Account">

    <EditText
        android:id="@+id/pEmail"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@+id/pHiddenEmail"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textWebEmailAddress"
        android:textColor="@color/greenAccent"
        android:textColorHint="@color/greenAccent"
        android:textSize="24sp" />



    <Button
        android:id="@+id/pEmailBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/colorAccent"
        android:onClick="changeEmail"
        android:text="Change Email" />

    <Button
        android:id="@+id/pPasswordBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorAccent"
        android:onClick="changePassword"
        android:text="Change Password"
        android:layout_alignBaseline="@+id/delAccBtn"
        android:layout_alignBottom="@+id/delAccBtn"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/pPassword"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@+id/pConfirmPassword"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textColor="@color/greenAccent"
        android:textColorHint="@color/greenAccent"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/pConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/pPasswordBtn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="62dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:hint="CONFIRM PASSWORD"
        android:inputType="textPassword"
        android:textColor="@color/greenAccent"
        android:textColorHint="@color/greenAccent"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/pHiddenPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pEmail"
        android:layout_marginStart="14dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/pPasswordBtn"
        android:ems="10"
        android:hint="Enter old password"
        android:inputType="textPassword"
        android:textColor="@color/greenAccent"
        android:textColorHint="@color/greenAccent"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/pHiddenEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pHiddenPassword"
        android:layout_below="@+id/pEmailBtn"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="enter old email"
        android:inputType="textWebEmailAddress"
        android:textColor="@color/greenAccent"
        android:textColorHint="@color/greenAccent"
        android:visibility="invisible" />

    <Button
        android:id="@+id/aConfirmBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pHiddenEmail"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@+id/pHiddenPassword"
        android:onClick="aReauth"
        android:text="Confirm"
        android:visibility="invisible" />

    <Button
        android:id="@+id/delAccBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:onClick="delAccount"
        android:text="Delete Account"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/pHiddenEmail"
        android:layout_marginBottom="19dp" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/logoutBtn"
        android:layout_alignEnd="@+id/logoutBtn" />

    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:onClick="logout"
        android:text="Logout" />

</android.widget.RelativeLayout>
