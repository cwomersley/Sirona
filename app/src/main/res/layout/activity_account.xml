<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.example.chris.strokere.Account">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pConfirmPassword"
        android:layout_marginTop="32dp"
        android:background="@color/colorAccent"
        android:onClick="pConfirm"
        android:text="Confirm" />

    <EditText
        android:id="@+id/pPassword"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="205dp"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="@color/greenAccent"
        android:textColorHint="@color/greenAccent"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/pConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pPassword"
        android:layout_marginTop="23dp"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:hint="Re-enter Password"
        android:inputType="textPassword"
        android:textColor="@color/greenAccent"
        android:textColorHint="@color/greenAccent"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/pPassword"
        android:text="Change Password"
        android:textColor="@color/colorAccent" />

</android.widget.RelativeLayout>
