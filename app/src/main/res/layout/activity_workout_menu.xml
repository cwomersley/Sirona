<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.strokere.Home">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <include
            android:id="@+id/include2"
            layout="@layout/navbar" />

        <include
            android:id="@+id/include3"
            layout="@layout/tips"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/tipIcon"
            android:layout_toEndOf="@+id/tipIcon" />

        <Button
            android:id="@+id/customBtn"
            style="@style/standard_button"
            android:layout_above="@+id/Calendar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/standard_button_green"
            android:onClick="customWorkout"
            android:text="Custom" />

        <Button
            android:id="@+id/Calendar"
            style="@style/standard_button"
            android:layout_above="@+id/Graph"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/standard_button_green"
            android:onClick="oTestMenu"
            android:text="SELF TESTS"
            app:layout_constraintTop_toBottomOf="@+id/customBtn" />

        <Button
            android:id="@+id/StandardBtn"
            style="@style/standard_button"
            android:layout_above="@+id/customBtn"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/customBtn"
            android:layout_marginBottom="5dp"
            android:background="@drawable/standard_button_pink"
            android:onClick="standardWorkout"
            android:text="Standard" />

        <Button
            android:id="@+id/Graph"
            style="@style/standard_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/standard_button_green"
            android:onClick="oSettings"
            app:layout_constraintTop_toBottomOf="@+id/Calendar" />

        <TextView
            android:id="@+id/tipIconBackground"
            android:background="@drawable/tip_background"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/include2"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp" />

        <ImageView
            android:id="@+id/tipIcon"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/include2"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/ic_add_alert_white_24dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
