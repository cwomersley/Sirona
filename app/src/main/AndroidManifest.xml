<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chris.strokere">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginScreenx" />
        <activity android:name=".Register" />
        <activity android:name=".ExerciseView" />
        <activity android:name=".ExerciseList" />
        <activity android:name=".Home" />
        <activity android:name=".Navigator" />
        <activity android:name=".Progress" />
        <activity android:name=".Settings" />
        <activity
            android:name=".Account"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".SettingsWorkoutReminder" />
        <activity android:name=".Graph" />
        <activity android:name=".ForgottenPassword" />
        <activity android:name=".WorkoutRating"></activity>
    </application>

</manifest>